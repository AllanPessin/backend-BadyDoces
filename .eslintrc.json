{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": [2, "double"],
        "semi": [2, "always"],
        "comma-dangle": ["error", {
            "arrays": "always",
            "object": "never",
            "imports": "always"
        }],
        "comma-spacing": ["error", { "before": false, "after": true }],
        "comma-style": ["error", "last"],
        "camelcase": ["error", {"properties": "never", "ignoreDestructuring": true}]
        // "properties": "never"
    }
}
